<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainbluex"
    android:orientation="vertical"
    android:id="@+id/Main_activity_layout_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttom"></FrameLayout>
<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:background="#CFCFCF"-->
<!--        android:layout_above="@+id/buttom"/>-->

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navigation_back"
        android:elevation="40dp"
        android:padding="9dp"
        android:windowSoftInputMode="adjustPan"
        app:cnb_addTopInset="true"
        app:cnb_menuResource="@menu/items"
        app:cnb_textAppearance="@style/CustomText"
        app:cnb_unselectedColor="#686868" />




</RelativeLayout>