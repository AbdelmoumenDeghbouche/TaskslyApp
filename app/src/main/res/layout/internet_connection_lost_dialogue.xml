<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/mainbluex"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgv_view_no_internet"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_baseline_signal_wifi_off_24"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/txt_oops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgv_view_no_internet"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="OOPS!"
        android:textColor="@color/black"

        android:textSize="40sp" />

    <TextView
        android:id="@+id/txt_no_internet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_oops"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="No internet connection"
        android:textColor="#606060"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txt_pls_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_no_internet"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Please check your connection"
        android:textColor="#606060"
        android:textSize="18sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_retry_connection"
        android:layout_width="match_parent"
        android:layout_height="55dp"

        android:layout_below="@+id/txt_pls_check"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/black"
        android:text="RETRY"
        app:cornerRadius="15dp" />

</RelativeLayout>


