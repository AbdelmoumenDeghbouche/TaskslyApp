<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".Welcom_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_img"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_weight="0.4"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_thinking_color" />

        <TextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center"
            android:text="Wait a minute ! "
            android:textColor="#0F1647"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/login_second_text"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="We are redirecting your to the home page , just wait a second !"
            android:textColor="#43385C"
            android:textSize="13sp" />

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1" />

</LinearLayout>